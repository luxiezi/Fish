<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <RadioGroup
        android:id="@+id/radiogroup_fragment"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/main_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/main"/>
        <RadioButton
            android:id="@+id/search_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/search_btn_normal"/>
        <RadioButton
            android:id="@+id/dolla_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/dolla"/>
        <RadioButton
            android:id="@+id/car_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/car"/>
        <RadioButton
            android:id="@+id/me_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/me"/>
    </RadioGroup>
</LinearLayout>
